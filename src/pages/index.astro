---
import WeddingInvitation from "../components/WeddingInvitation.tsx";
import "../styles/wedding-invitation.css";
---

<!doctype html>
<html lang="id">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Hajid & Faujiyah</title>
        <!-- WhatsApp & Open Graph Meta Tags -->
        <meta property="og:title" content="Hajid & Faujiyah" />
        <meta
            property="og:description"
            content="Sabtu, 4 Oktober 2025"
        />
        <meta
            property="og:image"
            content="https://raw.githubusercontent.com/hajidalakhtar/niqah/refs/heads/main/public/asset/meta.jpeg"
        />
        <meta property="og:url" content="https://hajidfauji.my.id" />
        <meta
            name="description"
            content="Sabtu, 4 Oktober 2025"
        />
        <meta name="whatsapp:card" content="summary_large_image" />
        <meta name="whatsapp:title" content="Hajid & Faujiyah" />
        <meta
            name="whatsapp:description"
            content="Sabtu, 4 Oktober 2025"
        />
        <meta
            name="whatsapp:image"
            content="https://raw.githubusercontent.com/hajidalakhtar/niqah/refs/heads/main/public/asset/meta.jpeg"
        />
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
        />
        <style>
            html {
                overflow-x: hidden;
            }

            body {
                background: #fdf6ec;
                min-height: 100vh;
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: flex-start;
                margin: 0;
                overflow-x: hidden;
                position: relative;
            }
        </style>
    </head>

    <body class="bg-black min-h-screen flex items-center justify-center">
        <WeddingInvitation client:load />
    </body>
</html>
